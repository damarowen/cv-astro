---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects Header</div>
  </div>

  <HorizontalCard
    title="My  Blog"
    img="/blog.png"
    desc= "My first project blog, built from scratch. using material ui, html, css, and nodejs"
    url="https://www.damarowen.blog/blogs"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Portofolio"
    img="/portofolio.png"
    desc="Is my old portofolio website, built from scratch"
    url="https://damarowen.github.io/myPortofolio/"
  />
  <div class="py-2">
    <text class="text-md">
      My other projects are listed on my PDF CV. Feel free to contact me !
    </text>
  </div>

  
</BaseLayout>
