---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SideBar from "../components/SideBar.astro";

import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import '../styles/center-radar.css';
import TawkTo from "../components/TawkTo.astro";

const { image, title = SITE_TITLE, description = SITE_DESCRIPTION, includeSidebar = true, sideBarActiveItemID } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-theme="lofi">
  <head >
    <BaseHead title={title} description={description} image={image} />
    <script src="../styles/loader.js"></script>
  </head>
  <TawkTo /> <!-- Panggil komponen di sini -->
  <body>
    <div id="visibility-trigger" style="visibility: hidden;">
      <div id="drawer-base" class="bg-base-100 drawer lg:drawer-open">
        <input id="my-drawer" type="checkbox" />
        <div class="drawer-content bg-base-100">
          <Header title={SITE_TITLE} />
          <div class="md:flex md:justify-center">
            <main class="p-6 pt-10 max-w-[900px]">
              <slot />
            </main>
          </div>
          <Footer />
        </div>
        {includeSidebar && <SideBar sideBarActiveItemID={sideBarActiveItemID} />}
      </div>
    </div>
  </body>
</html>